<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="row">
    <div class="form-group col-lg-3">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: 'form-control input-sm' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-3">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control input-sm' %>
    </div>
  </div>

  <%= submit_tag "Submit", class: "btn btn-primary mb-2" %>

<% end %>